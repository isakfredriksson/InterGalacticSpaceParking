@model InterGalacticSpaceParking.Models.Reservation

@{
    ViewData["Title"] = "AddReservation";
}
	<p>@ViewBag.ErrorMessage</p>

<h1>Parking registration</h1>
<hr />
<h4>Please enter your floor number and parking lot number.</h4>

<div class="row">
    <div class="col-md-4">
		<form asp-action="AddReservation" method="post" asp-antiforgery="true">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="FloorId" class="control-label"></label>
				<input asp-for="FloorId" class="form-control" />
				<span asp-validation-for="FloorId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ParkingId" class="control-label"></label>
				<input asp-for="ParkingId" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Register" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
